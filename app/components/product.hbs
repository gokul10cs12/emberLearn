<LinkTo @route="item" @model={{@product.id}}  class="product">
  <Product::Image @src={{this.productImage}}
                  @toggleZoom={{this.toggleZoom}}
  />
  <Product::Details
          @isDetails={{false}}
          @name={{@product.name}}
          @price={{@product.price}}
          @features={{@product.features}}
  />
</LinkTo>